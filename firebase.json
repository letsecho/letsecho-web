{
  "emulators": {
    "hosting": {
      "host": "0.0.0.0",
      "port": "8080"
    }
  },
  "hosting": {
    "public": "build",
    "headers": [
      {
        "source": "apple-app-site-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    ],
    "appAssociation": "NONE",
    "ignore": [
      "firebase.json",
      "**/.*",
      "src/*",
      "**/node_modules/**",
      "functions/*",
      "public/index.html"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      } 
    ]
  }
}
