{
  "hosting": {
    "public": "build",
    "headers": [
      {
        "source": "apple-app-site-association",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    ],
    "appAssociation": "NONE",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "src/*"
    ],
    "rewrites": [
      {
        "source": "/.well-known/assetlinks.json",
        "destination": "assetlinks.json"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }   
    ]
  }
}
